<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/main_toolbar"/>

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_centerInParent="true"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="0dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="0dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                tools:ignore="MissingClass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Informasi Umum"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:scrollbars="horizontal|vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/G_Swamedikasi"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickSwamedikasi"
                        android:src="@drawable/g_swamedikasi" />

                    <ImageView
                        android:id="@+id/G_Swaprevensi"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickSwaprevensi"
                        android:src="@drawable/g_swaprevensi" />

                    <ImageView
                        android:id="@+id/G_obat"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickObat"
                        android:src="@drawable/g_obat" />

                    <ImageView
                        android:id="@+id/G_kadaluarsa"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickKadaluarsa"
                        android:src="@drawable/kadaluarsa" />

                    <ImageView
                        android:id="@+id/G_penggolongan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickPenggolongan"
                        android:src="@drawable/g_penggolongan" />

                    <ImageView
                        android:id="@+id/G_ikemasan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickKemasan"
                        android:src="@drawable/g_ikemasan" />

                    <ImageView
                        android:id="@+id/G_pemilihan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickPemilihan"
                        android:src="@drawable/g_pemilihan" />

                    <ImageView
                        android:id="@+id/G_penggunaan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:onClick="ClickPenggunaan"
                        android:src="@drawable/g_penggunaan" />

                    <ImageView
                        android:id="@+id/G_pembuangan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:layout_marginEnd="20dp"
                        android:onClick="ClickPembuangan"
                        android:src="@drawable/g_pembuangan" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Batuk"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ClickBatuk"
                android:src="@drawable/batuk"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Flu"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ClickFlu"
                android:src="@drawable/flu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Demam"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ClickDemam"
                android:src="@drawable/demam"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Diare"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ClickDiare"
                android:src="@drawable/diare"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Sembelit"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ClickSembelit"
                android:src="@drawable/sembelit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Maag"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ClickMaag"
                android:src="@drawable/maag"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/main_nav_drawer" />


    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>