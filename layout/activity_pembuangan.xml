<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IUmum.Pembuangan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/include"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/teksscale"
            android:layout_width="340sp"
            android:layout_height="39sp"
            android:layout_below="@+id/include"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Pembuangan Obat"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_materi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="Cara Pembuangan Obat"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/line1desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ada beberapa hal yang harus diperhatikan dalam pembuangan obat, supaya tidak terjadi penyalahgunaan

                \na. Tablet
                \n\t\t - Segala Informasi tentang obatdilepas/dihilangkan dari bungkusnya
                \n\t\t - Hanncurkan obat sampai rusak
                \n\t\t - MAsukkan dalam plastik lalu dibuang

                \nb. Larutan
                \n\t\t - Label obat dilepas dari botolnya
                \n\t\t - Encerkan obat dengan air/dicampur dengan tanah
                \n\t\t - Tuang larutan pada tanah"
                android:textColor="@color/black"
                android:layout_below="@+id/line1"
                android:padding="20sp"/>



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>