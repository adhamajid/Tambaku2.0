<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IUmum.Kemasan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/include"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/teksscale"
            android:layout_width="340sp"
            android:layout_height="39sp"
            android:layout_below="@+id/include"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Kemasan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_materi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="Informasi kemasan, etiket, dan brosur"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/line1desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sebelum menggunakan obat, perhatikan dulu kemasannya ya. karena ada beberapa informasi penting yang harus kita ketahui, seperti:

                \n\n\ta. nama obat
                \n\tb. komposisi
                \n\tc. indikasi
                \n\td. informasi cara kerja obat
                \n\te. aturan pakai
                \n\tf. peringatan
                \n\tg. perhatian namma produsen
                \n\th. nama produsen
                \n\ti. nomor batch
                \n\tj. nomor registrasi
                \n\tk. tanggal kadaluarsa
"
                android:textColor="@color/black"
                android:layout_below="@+id/line1"
                android:padding="20sp"/>

            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:textAlignment="center"
                android:background="@drawable/retangle_pilihan"
                android:text="Hal Yang Perlu Diperhatikan"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/line2desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:padding="20sp"
                android:text="a. Kemasan harus bersegel baik
                \nb. baca aturan pakai
                \nc. bila ragu tanyakan pada apoteker
                \nd. Bila sakit berlanjut hubungi dokter"
                android:textColor="@color/black" />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>